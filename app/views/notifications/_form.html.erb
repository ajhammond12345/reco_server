<%= form_for(@notification,
  html: { class: 'form-horizontal' },
  wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean
  },
  :html => { :multipart => true }
) do |f| %>

  <div class="field">
	  <%= f.label :notification_title%><br>
 	 <%= f.text_field :notification_title%>
  </div>

<% if 1 > 2 %>
  <div class="field">
 	 <%= f.label :notification_text%><br>
 	 <%= f.text_field :notification_text%>
  </div>
<% end  %>

  <div class="field">
  	<%= f.label :notification_resolved%><br>
  	<%= f.text_field :notification_resolved%>
  </div>

  <div class="field">
 	 <%= f.label :notification_is_problem_with_property%><br>
 	 <%= f.text_field :notification_is_problem_with_property%>
  </div>

  <div class="actions">
  	<%= f.submit %>
  </div>


<% end %>
